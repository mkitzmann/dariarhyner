<form method="post" action="{{ path('ArtworkDeleteRoute', {'artwork_slug': artwork.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this artwork?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artwork.slug) }}">
    <button class="btn delete">Delete</button>
</form>
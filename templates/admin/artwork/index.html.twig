{% extends 'base.html.twig' %}

{% block title %}Artwork index{% endblock %}

{% block body %}
    <h1>Artwork index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Series</th>
                <th>Description</th>
                <th>Year</th>
                <th>Position</th>
                <th>Image</th>
                <th>Gridsize</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artwork in artworks %}
            <tr>
                <td>{{ artwork.id }}</td>
                <td>{{ artwork.title }}</td>
                <td>{{ artwork.slug }}</td>
                <td>{{ artwork.series }}</td>
                <td>{{ artwork.description }}</td>
                <td>{{ artwork.year }}</td>
                <td>{{ artwork.position }}</td>
                <td>{{ artwork.image }}</td>
                <td>{{ artwork.gridsize }}</td>
                <td>
                    <a href="{{ path('artwork_show', {'id': artwork.id}) }}">show</a>
                    <a href="{{ path('artwork_edit', {'id': artwork.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('artwork_new') }}">Create new</a>
{% endblock %}
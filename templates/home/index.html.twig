{% extends 'base.html.twig' %}

{% block body %}
    <div class="social-buttons">
        <a href="https://www.facebook.com/dariarhyner/">FACEBOOK</a>
        <a href="https://www.instagram.com/dariarhyner/">INSTAGRAM</a>
        <a href="#newsletter">NEWSLETTER</a>
    </div>
    
    <div class="content">
        <div class="image-grid">

{% for artwork in artworks %}
            <div class="image-wrapper">
                <a href="/artwork/{{ artwork.slug }}">
            <img src="{{ asset('/art/' ~ artwork.image ) | imagine_filter('medium') }}" srcset="{{ asset('/art/' ~ artwork.image ) | imagine_filter('small') }} 600w,{{ asset('/art/' ~ artwork.image ) | imagine_filter('medium') }} 1000w"/>
                    <div class="image-caption">{{ artwork.title }}</div>
                </a>
            </div>
{% endfor %}
        
        </div>

    </div>



{% endblock %}
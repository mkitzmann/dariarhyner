{% extends 'base.html.twig' %}

{% block title %} | News{% endblock %}

{% block body %}
{% include 'modules/social-buttons.html.twig' %}

    <div class="content">
        <div class="news-grid">
            {% for newsItem in news %}
                <div class="news-wrapper">

                    <div class="news-image">
                        <img src="{{ asset('/art/' ~ newsItem.image ) | imagine_filter('medium') }}" srcset="{{ asset('/art/' ~ newsItem.image ) | imagine_filter('small') }} 800w,{{ asset('/art/' ~ newsItem.image ) | imagine_filter('medium') }} 1400w"/>
                    </div>
                    <div class="news-body">
                        <h2>{{ newsItem.title }}</h2>
                        <h3>{{ newsItem.date|date("d.m.Y")}}</h3>
                        <p>{{ newsItem.content|nl2br}}</p>
                    </div>
                </div>
            {% endfor %}

        </div>
                              <div class="bottom-spacer" />
    </div>

{% endblock %}
  {% extends 'base.html.twig' %}

{% block title %} | {{ artwork.title }}{% endblock %}

 {% block body %}
        <div class="image-single-caption">
        <div class="image-single-text">
            <span class="bold">{{ artwork.title }}</span><br>
             {{ artwork.series }} / {{ artwork.year }}<br>
            {{ artwork.description }}
            </div>
            <div class="image-links">
            <a href="{{ prevlink.slug }}">PREV</a> / <a href="/">OVERVIEW</a> / <a href="{{ nextlink.slug }}">NEXT</a>
            </div>
        </div>

    <div class="content">
  
            <div class="image-single-wrapper">
            <img src="{{ asset('/art/' ~ artwork.image ) | imagine_filter('medium') }}" srcset="{{ asset('/art/' ~ artwork.image ) | imagine_filter('small') }} 600w,{{ asset('/art/' ~ artwork.image ) | imagine_filter('medium') }} 1000w, {{ asset('/art/' ~ artwork.image ) | imagine_filter('large') }} 1400w"/>
            </div>

   </div>
     
 {% endblock %}